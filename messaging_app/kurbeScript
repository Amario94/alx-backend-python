#!/bin/bash

set -e

echo "ğŸš€ Starting Kubernetes setup script..."

# Check and install kubectl
if ! command -v kubectl &> /dev/null
then
    echo "ğŸ“¦ kubectl not found. Installing..."
    curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
    chmod +x kubectl
    sudo mv kubectl /usr/local/bin/
else
    echo "âœ… kubectl is already installed."
fi

# Check and install Minikube
if ! command -v minikube &> /dev/null
then
    echo "ğŸ“¦ Minikube not found. Installing..."
    curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
    sudo install minikube-linux-amd64 /usr/local/bin/minikube
else
    echo "âœ… Minikube is already installed."
fi

# Start Minikube
echo "ğŸš€ Starting Minikube..."
minikube start

# Verify cluster
echo "ğŸ” Verifying Kubernetes cluster..."
kubectl cluster-info

# Get pods
echo "ğŸ“‹ Listing available pods..."
kubectl get pods --all-namespaces

echo "ğŸ¯ Kubernetes local cluster setup complete!"
